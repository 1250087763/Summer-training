int *countBits(int num, int *returnSize) {
    int i = 0;
    int *array = NULL;
    if (num <= 0) {
        *returnSize = 1;
    } else {
        *returnSize = num + 1;
    } 
    array = malloc(sizeof(int) * (*returnSize));
    array[0] = 0;
    for (i = 1; i <= num; i++) {
        array[i] = array[i & (i - 1)] + 1;
    }
    return array;
}
