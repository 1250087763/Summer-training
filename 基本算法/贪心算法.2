class Solution {
public:
    int maxNumberOfApples(vector<int>& arr) 
    {
        sort(arr.begin(),arr.end());
        int sum=0;
        int n=arr.size();
        int res=n;
        for(int i=0;i<n;i++)
        {
            sum+=arr[i];
            if(sum>5000)
            {
                res=i;
                break;
            }
        }
        return res;
    }
