#include<stdio.h>
#include<math.h> 
int main()
{
     float a,b,c,p,area;
     printf("Please enter the length of three sides of the triangle\n");
     scanf("%f%f%f",&a,&b,&c);
     p=1.0/2*(a+b+c);
     if(a+b>c&&b+c>a&&a+c>b)
	 {
	 area=sqrt(p*(p-a)*(p-b)*(p-c));
     printf("The area of the triangle isï¼š%7.2f\n",area);
     }
     else 
     printf("Can't form a triangle\n");
     return 0;
}
