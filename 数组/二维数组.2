//求3行5列二维数组中的最小值，及最小值在数组中的行号和列号，并输出。
#include<stdio.h>
int main(void)
{
    int i, j, x, y;
    double score[3][5], min;
    printf("Input 15 numbers: \n");
    for (i = 0; i < 3; i++)
        for (j = 0; j < 5; j++)
            scanf("%lf", &score[i][j]);
    min = score[0][0];
    for (i = 0; i < 3; i++)
        for (j = 0; j < 5; j++)
            if ( score[i][j] < min) {
                min = score[i][j];
                x = i, y = j;
            }
    printf("min = %.1f,line number=%d,column number=%d\n", min, x, y);
    return 0;
}
